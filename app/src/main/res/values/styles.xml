<resources>

    <attr format="reference" name="cardStyle"/>
    <attr format="reference" name="ttItemPopupMenuStyle" />
    <attr format="reference" name="album_default_palette_color" />
    <attr format="reference" name="default_album_drawable" />
    <attr format="reference" name="default_singer_drawable" />
    <attr format="reference" name="divider_color" />
    <attr format="reference" name="ttPopupMenuStyle" />
    <attr format="reference" name="selectableItemBackground"/>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="default_album_drawable">@drawable/defult_album_art</item>
        <item name="default_singer_drawable">@drawable/defult_album_art</item>
        <item name="fontFamily">@font/proxima_nova_regular</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in_slow</item>
        <item name="android:windowExitAnimation">@anim/fade_out_slow</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>


    <style name="ListItemSubTitleStyle" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0.0px</item>
    </style>

    <style name="AnimationPlayQueue">
        <item name="android:windowEnterAnimation">@anim/fade_in_slow</item>
        <item name="android:windowExitAnimation">@anim/fade_out_slow</item>
    </style>
</resources>
